root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
line_length = 79
multi_line_output = 4
balanced_wrapping = true
known_first_party = svg_icons,tests
use_parentheses = true

[*.json, *.yml, *rc]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
